                    </params>
                </property>
                <property name="useExternalJs" type="checkbox" colspan="4">
                    <meta>
                        <title>gdpr_settings.useExternalJs</title>
                    </meta>
                    <params>
                        <param name="default_value" value="false"/>
                    </params>
                </property>
                <property name="readmoreLink" type="text_line" colspan="4">
                    <meta>
                        <title>gdpr_settings.readmoreLink</title>
                    </meta>
                </property>
                <property name="mandatory" type="checkbox" colspan="4">
                    <meta>
                        <title>gdpr_settings.mandatory</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
                </property>
                <property name="mandatoryCta" type="checkbox" colspan="4">
                    <meta>
                        <title>gdpr_settings.mandatoryCta</title>
                    </meta>
                    <params>
                        <param name="default_value" value="true"/>
                    </params>
